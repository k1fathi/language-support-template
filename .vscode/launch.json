{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch React App",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "breakOnLoad": true,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch React Dev Server",
      "program": "${workspaceFolder}/node_modules/react-scripts/scripts/start.js",
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal"
    }
  ]
}
